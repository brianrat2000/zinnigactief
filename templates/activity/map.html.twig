{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="event-container col-12 col-lg-3">
        <p class="ml-5 event-about-title">Locatie {{ activity.name }}</p>
        <div class="event-wrapper">
            <div class="pt-2">
                <div class="d-flex justify-content-center text-center">
                    {% if activity.fileName == '' %}
                        <img class="event-about-img"
                             src="{{ asset("images/4k-wallpaper-clouds-cloudy-1668246.jpg") }}" alt="x">
                    {% else %}
                        <img class="event-about-img"
                             src="{{ vich_uploader_asset(activity, "file") }}" alt="x">
                    {% endif %}
                    <div class="bg-white event-map">
                        <a class="event-map-icon" href="{{ path("activity_route", {'id': activity.id}) }}">
                            <img src="{{ asset("mbo-icons/send.svg") }}">
                        </a>
                        <iframe class="w-100 h-100" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2450.0996034299496!2d4.649485516105112!3d52.11431647973955!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c5da917b2b2951%3A0x686fb73e30112f1d!2sArcheon+Museumpark!5e0!3m2!1snl!2snl!4v1560089413071!5m2!1snl!2snl" frameborder="1" style="border: none;border-radius: 0 0 50px 50px; padding: 5px;" allowfullscreen></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
