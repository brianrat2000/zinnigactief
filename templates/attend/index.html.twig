{% extends 'base.html.twig' %}

{% block title %}Attend index{% endblock %}

{% block body %}
    <h1>Attend index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Speaker</th>
                <th>Present</th>
                <th>Payed</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for attend in attends %}
            <tr>
                <td>{{ attend.id }}</td>
                <td>{{ attend.speaker }}</td>
                <td>{{ attend.present }}</td>
                <td>{{ attend.payed }}</td>
                <td>
                    <a href="{{ path('attend_show', {'id': attend.id}) }}">show</a>
                    <a href="{{ path('attend_edit', {'id': attend.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('attend_new') }}">Create new</a>
{% endblock %}
