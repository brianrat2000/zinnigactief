{% trans_default_domain 'FOSUserBundle' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="event-container col-12 col-sm-3 col-lg-3">
        <p class="ml-5 event-about-title">{{ user.username }}</p>
        <img width="75" height="75" class="float-right profile_img" src="{{ asset('images/4k-wallpaper-clouds-cloudy-1668246.jpg') }}" />
        <div class="event-wrapper">
            <div class="pt-2" style="margin-top: -55px; z-index: -1;">
                <div class="d-flex justify-content-center text-center w-100">
                    <img class="event-about-img user-banner"
                         src="{{ asset("images/dark-diving-eerie-2289407.jpg") }}" alt="x">
                    <div class="bg-white user-description text-left p-3">
                        <h2 class="bold text-purple">{{ user.username }}</h2>
                        <strong class="text-purple">Jouw gelikte events:</strong>
                        <div class="container mt-2">
                            <div class="row">
                                <div class="col-12 mb-3 w-100 pb-3 user_events text-center">
                                    <h3 class="text-light">{{ user.username }}</h3>
                                    <br/>
                                    <a class="btn pt-1 bold text-light" href="{{ path('user_show', {'id': user.id}) }}" style="font-size:13px;">Bekijk event</a>
                                </div>

                                <div class="col-12 pb-3 w-100 user_events text-center">
                                    <h3 class="text-light">{{ user.username }}</h3>
                                    <br/>
                                    <a class="btn pt-1 bold text-light" href="{{ path('user_show', {'id': user.id}) }}" style="font-size:13px;">Bekijk event</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
