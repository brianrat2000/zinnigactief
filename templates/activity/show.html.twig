{% extends 'base.html.twig' %}

{% block title %}Activity{% endblock %}

{% block body %}
    <div class="event-container col-12 col-lg-3">
        <p class="ml-5 event-about-title">Over {{ activity.name }}</p>
        <div class="event-wrapper">
            <div class="pt-2">
                <div class="d-flex justify-content-center text-center">
                    {% if activity.fileName == '' %}
                        <img class="event-about-img"
                             src="{{ asset("images/4k-wallpaper-clouds-cloudy-1668246.jpg") }}" alt="x">
                    {% else %}
                        <img class="event-about-img"
                             src="{{ vich_uploader_asset(activity, "file") }}" alt="x">
                    {% endif %}
                    <div class="event-description text-left p-3">
                        <a class="event-map-icon" href="{{ path("activity_map", {'id': activity.id}) }}">
                            <img src="{{ asset("mbo-icons/send.svg") }}">
                        </a>
                        <h2 class="bold">{{ activity.name }}</h2>
                        <p class="mt-3">
                            {{ activity.description|raw }} </p>
                    </div>
                    <div class="event-footer">
                        <img class="float-left pt-3 pl-3" src="{{ asset("mbo-icons/heart.svg") }}">
                        <p class="text-purple float-left pt-3 pl-2">{{ activity.id }} likes</p>
                        <p class="text-purple float-right pt-3 pr-3"
                           style="color: #3A0F49">{{ activity.maxPeople }} Max.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}